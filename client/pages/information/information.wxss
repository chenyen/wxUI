@import "../../static/default.wxss";

.container {
  background-color: #F5F5F5;
  position: absolute;
  width: 100%;
  height: 100%;
}
.m-celltitle {
  padding: 1rem 0.4rem 0.2rem;
  font-size: 0.8rem;
  text-align: left;
  color: #888;
  position: relative;
  z-index: 1;
  width: 100%;
}
.m-cell {
  background-color: #FFF;
  position: relative;
  z-index: 1;
  margin-bottom: .35rem;
  width: 100%;
  border-top: 1px solid #D9D9D9;
}
.cell-item {
  background-color: #ffffff;
  border-bottom: 1px solid #D9D9D9;
  overflow: hidden;
  height: 2rem;
  padding: 0 0.4rem;
  display: flex;
  align-items: center;
}
.cell-left {
  color: #333;
  font-size: 0.7rem;
  width: 27%;
  text-align: right;
}
.cell-right {
  width: 73%;
  text-align: right;
  color: #525252;
  font-size: 0.7rem;
}